{
  "compilerOptions": {
    "target": "ES2021",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDirs": ["src", "tests", "docs"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist/@types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests", "prisma", "docs"],
  "exclude": []
}
